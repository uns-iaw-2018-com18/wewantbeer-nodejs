{% extends 'layout.twig' %}

{% block javascript %}
  <script>
    var myStyle = '{{user.style}}';
  </script>
{% endblock %}

{% block buttons %}
  <div id="top-navbar">
    {% if user %}
      <a id="login-btn" href="/logout?redirect=/privacy">
        {% if user.nickname %}
          {{user.nickname}}
        {% elseif user.google.name.givenName %}
          {{user.google.name.givenName}}
        {% elseif user.facebook.name.givenName %}
          {{user.facebook.name.givenName}}
        {% endif %}
      </a>
    {% else %}
      <a id="login-btn" href="/login?redirect=/privacy">Ingresar</a>
    {% endif %}
    <label id="style-toggle-switch">
      <input id="switch-checkbox" type="checkbox" checked="checked">
      <span id="switch-slider"></span>
    </label>
  </div>
{% endblock %}

{% block content %}
  <span id='about-title'>Privacidad de We Want Beer</span>
